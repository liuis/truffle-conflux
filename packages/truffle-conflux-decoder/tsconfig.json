{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2017"],
    "paths": {
      "conflux-web": ["../../node_modules/@types/conflux-web/index", "node_modules/conflux-web/index"],
      "conflux-web/types": ["../../node_modules/@types/conflux-web/types", "node_modules/conflux-web/types"],
      "conflux-web/cfx/types": ["../../node_modules/@types/conflux-web/cfx/types", "node_modules/conflux-web/cfx/types"]
    },
    "rootDir": "../",  
    "typeRoots": [
      "./typings",
      "../../**/node_modules/@types/bn.js",
      "../../**/node_modules/@types/debug",
      "../../**/node_modules/@types/lodash",
      "../../**/node_modules/@types/lodash.clonedeep",
      "../../**/node_modules/@types/lodash.isequal",
      "../../**/node_modules/@types/lodash.merge"
    ]

  },
  "include": [
    "./lib/**/*.ts",
    "./typings/**/*.d.ts"
  ]
}
